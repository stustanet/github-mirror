[Unit]
Description=Github Mirror Service

[Service]
ExecStart=/usr/local/bin/github-mirror
Restart=on-failure

NonBlocking=true

User=git
Group=git
PrivateTmp=yes
ProtectSystem=full
PrivateDevices=yes
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true
NoNewPrivileges=yes

[Install]
WantedBy=multi-user.target
